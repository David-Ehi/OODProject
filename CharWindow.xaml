<Window x:Class="OODProject.CharWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OODProject"
        mc:Ignorable="d"
        Title="CharWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Background="#2E2E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>
        <Label Content="" Background="DarkRed" Name="CharNameLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" FontSize="18"/>
        <Label Content="Spell" Background="DarkRed" Name="CharSpellLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" FontSize="18"/>
        <Label Content="Abilities" Background="DarkRed" Name="CharAbilityLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" FontSize="18"/>
        <Label Content="Roll" Background="DarkRed"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0" FontSize="18"/>
        <Label Content="HP" HorizontalAlignment="Left" Margin="21,20,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="/10" Name="MaxHpLbl" HorizontalAlignment="Left" Margin="68,20,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="HpTxBx" Margin="55,20,0,0" Grid.Row="1" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="39"/>
        <Label Content="AC" HorizontalAlignment="Left" Margin="21,58,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Label" Name="AcLbl" HorizontalAlignment="Left" Margin="55,58,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <ListBox Grid.Column="2" Name="AbilitiesLbBx" HorizontalAlignment="Center" Height="131" Margin="0,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </Grid>
</Window>
